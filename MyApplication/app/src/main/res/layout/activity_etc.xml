<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원님"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src=""
            tools:srcCompat="@android:drawable/ic_menu_edit" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:text="example@zeroweb.com"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="골드를 유지하려면, 계정을 만드세요!"
        android:textColor="@color/colorRed"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="5dp"
            app:srcCompat="@drawable/ic_gold_16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="520,100"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내지갑"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="15dp"
        android:alpha="0.1"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/event_icon_new" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="이벤트" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/ic_exchange" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="출금 신청" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/ic_coupons" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="쿠폰샵" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#741F97D1"
        android:gravity="center"
        android:text="내가 방문한 장소 공유하고 \n 보너스 골드 받으세요" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="버전정보"
            android:textSize="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="1.0.3"
            android:alpha="0.7" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="업데이트"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:alpha="0.1"
        android:background="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:text="공지사항"
        android:textSize="18dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:alpha="0.1"
        android:background="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableEnd="@drawable/arrow_right_gray"
        android:gravity="center_vertical"
        android:text="사용법"
        android:textSize="18dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:alpha="0.1"
        android:background="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableEnd="@drawable/arrow_right_gray"
        android:gravity="center_vertical"
        android:text="고객센터"
        android:textSize="18dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:alpha="0.1"
        android:background="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableEnd="@drawable/arrow_right_gray"
        android:gravity="center_vertical"
        android:text="알림설정"
        android:textSize="18dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:alpha="0.1"
        android:background="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableEnd="@drawable/arrow_right_gray"
        android:gravity="center_vertical"
        android:text="이용약관"
        android:textSize="18dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:alpha="0.1"
        android:background="#000000" />

</LinearLayout>